{
  "compilerOptions": {
    "outDir": "es",
    "jsx": "react-jsx",
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@arco-design/web-react": ["components/index.tsx"],
      "@arco-design/web-react/icon": ["icon/index.js"],
      "test-utils": ["tests/util.ts"]
    }
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "stories/**/*.tsx",
    "typings/utils.d.ts"
  ],
  "exclude": ["node_modules", "components/**/*.test.tsx", "components/**/*.test.ts"]
}
