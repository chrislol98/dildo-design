{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "@arco-design/web-react": ["components/index.tsx"],
      "@arco-design/web-react/icon": ["icon/index.js"],
      "test-utils": ["tests/util.ts"]
    }
  },
  "include": ["components/**/*.ts", "components/**/*.tsx", "stories/**/*.tsx", "typings/utils.d.ts"]
}
